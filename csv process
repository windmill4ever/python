import csv
from matplotlib import pyplot as plt
from datetime import datetime

filename = 'guangzhou2019.csv'
with open(filename) as f:
    reader = csv.reader(f)
    header_row = next(reader)

    for index, column_header in enumerate(header_row):
        print(index, column_header)        #打印首行 每一列的标签名
    second_row = next(reader)        #进入数据

    highs,dates,lows =[],[],[]
    '''
    for row in reader:
        highs.append(int(row[1]))
        lows.append(int(row[3]))
        dates.append(datetime.strptime(row[0],'%Y-%m-%d'))
    '''
    for row in reader:
        try:
            current_date = datetime.strptime(row[0],'%Y-%m-%d')    #读日期，改格式
            high = int(row[1])        #最高温
            low = int(row[3])        #最低温
        except ValueError:
            print(current_date,'missing data')        #数据为空就报错
        else:
            dates.append(current_date)
            highs.append(high)
            lows.append(low)

fig = plt.figure(dpi=128,figsize = (10,6))    #图表大小，分辨率
plt.plot(dates,highs,c ='red',alpha = 0.5)    #横轴时间，纵轴温度，透明度0.5
plt.plot(dates,lows,c ='blue',alpha = 0.5)
plt.fill_between(dates,highs,lows,facecolor = 'blue',alpha = 0.1)    #填充两线间空间
#plt.axis([0,len(highs)+1,min(highs)-1,max(highs)+1])
fig.autofmt_xdate()
plt.show()
